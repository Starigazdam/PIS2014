<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<application>
		<message-bundle>resources.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>
	<navigation-rule>
		<display-name>admlogin.xhtml</display-name>
		<from-view-id>/admlogin.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/admin/admin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admlogin.xhtml</display-name>
		<from-view-id>/admlogin.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failed</from-outcome>
			<to-view-id>/admlogin.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admin/admin.xhtml</display-name>
		<from-view-id>/admin/admin.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/admlogin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admin/admin.xhtml</display-name>
		<from-view-id>/admin/admin.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cards</from-outcome>
			<to-view-id>/admin/cardlist.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admin/cardlist.xhtml</display-name>
		<from-view-id>/admin/cardlist.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/admlogin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admin/admin.xhtml</display-name>
		<from-view-id>/admin/admin.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>newcard</from-outcome>
			<to-view-id>/admin/addCard.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admin/addCard.xhtml</display-name>
		<from-view-id>/admin/addCard.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/admlogin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>admin/addCard.xhtml</display-name>
		<from-view-id>/admin/addCard.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>insert</from-outcome>
			<to-view-id>/admin/admin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
